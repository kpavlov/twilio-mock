{
  "name": "twilio-mock",
  "version": "0.0.1",
  "description": "Twilio Mock API Server",
  "type": "module",
  "exports": "./dist/index.js",
  "scripts": {
    "start": "nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --trace-tls --loader ts-node/esm' src/index.ts",
    "test": "jest --coverage --detectOpenHandles --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kpavlov/twilio-mock.git"
  },
  "keywords": [
    "twilio",
    "mock-api",
    "express"
  ],
  "author": "Konstantin Pavlov",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/kpavlov/twilio-mock/issues"
  },
  "homepage": "https://github.com/kpavlov/twilio-mock#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globalSetup": "./scripts/jestGlobalSetup.ts",
    "globalTeardown": "./scripts/jestGlobalTearDown.ts",
    "setupFiles": [
      "dotenv/config"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.15",
    "twilio": "^3.73.1",
    "axios": "^0.25.0",
    "dotenv": "^16.0.0",
    "jest": "^27.5.0",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "express": "^4.17.2"
  }
}
